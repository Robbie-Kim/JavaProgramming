package homework_firstweek;

public class Advance_04 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
//		4. 다음과 같이 출력하세요.
//	    *				*********
//	   ***				*********
//	  *****				*********
//	 *******			*********
//	*********			*********
		// 줄 반복
		for (int i = 1; i <= 4; i++)	{
			// 공백 출력
			for(int j = 5 - i; j > 0; j--)	{
				System.out.print(" ");
			}
			// 별 출력
			for(int k = 1; k <= i*2 - 1; k++)	{
				System.out.print("*");
			}
			// 줄 바꿈
			System.out.println("");
		}
		
		
		
		
	}

}
